
<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "" %>
	<table class="table">
		<tbody>
			<tr></tr>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<%= link_to "edit", edit_user_path(user.id) %>
	</div>

	<h2>New book</h2>
	<%= form_for(book) do |f| %>
		<label for="book-title">Title</label>
		<%= f.text_field :title %>
		<label for="book-opinion">Opinion</label>
		<%= f.text_field :body %>
		<%= f.submit 'Create Book' %>
	<% end %>
</div>