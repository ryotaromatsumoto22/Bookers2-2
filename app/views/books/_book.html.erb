<td>
  <%= link_to user_path(book.user.id) do %>
    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" %>
  <% end %>
</td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body %></td>
<td>
  <% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book, redirect_id: 0), method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color:red;"></i>
      <%= book.favorites.count %> いいね
    <% end %>
  <% else %>
    <%= link_to book_favorites_path(book, redirect_id: 0), method: :post, remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= book.favorites.count %> いいね
    <% end %>
  <% end %>
</td>
<td>
  <%= book.post_comments.count %> 件コメント
</td>
