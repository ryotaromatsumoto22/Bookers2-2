<div class="body">
	<div class="container">
		<% if @book.errors.any? %>
  			<div class="error_explanation">
  				<h3><%= @book.errors.count %> errors prohibited this book from being saved:
  				</h3>
    			<ul>
      			<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
   			 	</ul>
  			</div>
		<% end %>
		<div class="row">
			<div class="col-xs-3">

				<%= render 'users/info', user: @user %>
				<%= render 'form', book: @book %>

			</div>

			<div class="col-xs-9">
				<h2>Books</h2>

				<%= render 'index', books: @books %>

			</div>
		</div>
	</div>
</div>