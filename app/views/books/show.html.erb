<div class="body">
	<div class="container">
		<div class="flash">
			<% if flash[:notice] %>
				<%= flash[:notice] %>
			<% end %>
		</div>

			<div class="row">
				<div class="col-xs-3">

					<%= render 'users/info', user: @user %>

					<%= render 'form', book: Book.new %>

				</div>

			<div class="col-xs-9">
				<h2>Book detail</h2>
					<table class='table'>
				 		<tr class="book_<%= @book.id %>">
							<%= render 'detail', book: @book %>
						</tr>
					</table>
					<ol class="show-tb comment_<%= @book.id %>">
						<%= render 'comment', post_comments: @book.post_comments %>
					</ol>

				<%= form_with model:[@book, @post_comment], data: {remote: true} do |f| %>
    				<div class="row">
        				<div class="col-sm-6">
            				<%= f.text_area :comment, rows:'2', class: "form-control",placeholder: "コメントをここに" %>
        				</div>
    				</div>
    			<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
				<% end %>
			</div>
		</div>
	</div>
</div>

