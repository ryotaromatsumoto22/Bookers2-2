<div class="container">
	<div class="flash">
		<% if flash[:notice] %>
			<%= flash[:notice] %>
		<% end %>
	</div>
		
		<div class="row">

		<%= render '/co', book: @book, user: @user %>


		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<%if user_signed_in? %>
						<tr>
							<td>
								<%= link_to user_path(@book_d.user.id) do %>
									<%= attachment_image_tag @book_d.user, :profile_image, :fill, 70, 70, format: 'jpeg' %>
									<br><%= @book_d.user.name %>
								<% end %>
							</td>
							<td>
								<%= link_to @book_d.title, book_path(@book_d.id) %>
							</td>
							<td>
								<%= @book_d.body %>
							</td>
							<td>
								<div class="btn-sm btn-success">
									<%= link_to "Edit", edit_book_path(@book_d.id) %>
							</td>
							<td>
								<div class="btn-sm btn-danger">
									<%= link_to "Destroy",book_path,method: :delete,"data-confirm" =>"本当に消しますか？" %>
							</td>
						</tr>
					<% else %>
						<tr>
							<td>
								<%= link_to user_path(@book_d.user.id) do %>
									<%= attachment_image_tag @book_d.user, :profile_image, :fill, 70, 70, format: 'jpeg' %>
									<br><%= @book_d.user.name %>
								<% end %>
							</td>
							<td>
								<%= link_to @book_d.title, book_path(@book_d.id) %>
							</td>
							<td>
								<%= @book_d.body %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
