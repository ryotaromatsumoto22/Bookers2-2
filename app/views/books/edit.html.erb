<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
					<%= form_for(@book) do |f| %>
						<div class="field row">
							<label for="book_title">Title</label>
							<div class="col-xs-12">
								<%= f.text_field :title %>
							</div>
						</div>
						<div class="field row">
							<label for="book_opinion">Opinion</label>
							<div class="col-xs-12">
								<%= f.text_field :body %>
							</div>
						</div>
						<div class="actions row">
							<div class="btn btn-primary col-xs-12">
								<%= f.submit "Update Book" %>
							</div>

						<%= link_to "Show", book_path(@book.id) %>
						|
						<%= link_to "Back", books_path %>
						</div>
					<% end %>
			</div>
		</div>
	</div>
</div>


