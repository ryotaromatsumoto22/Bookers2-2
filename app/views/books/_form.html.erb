<h2>New book</h2>
<%= form_for(book) do |f| %>
	<div class="field row">
		<div class="col-xs-12">
			<label for="book-title">Title</label>
			<br>
			<%= f.text_field :title, class:"col-xs-12" %>
		</div>
	</div>
	<div class="field row">
		<div class="col-xs-12">
			<label for="book-opinion">Opinion</label>
			<br>
			<%= f.text_area :body, class:"col-xs-12" %>
			<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
		</div>
	</div>
<% end %>