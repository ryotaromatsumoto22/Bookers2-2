<!DOCTYPE html>
<html>
  <head>
    <title>Bookers22</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="row">
          <div class="col-sm-3">
            <nav class="nav navbar-nav navbar-left">
              <span>Bookers</span>
            </nav>
          </div>
        </div>
          <nav>
            <% if user_signed_in? %>
              <div class="row">
                <ul class="nav navbar-nav navbar-right">
                <div class="col-sm-2">
                  <li>
                    <a class="glyphicon glyphicon-home home" href="/"> Home</a>
                  </li>
                </div>
                <div class="col-sm-2">
                  <li>
                    <a class="glyphicon glyphicon-user users" href="/users"> Users</a>
                  </li>
                </div>
                <div class="col-sm-2">
                  <li>
                    <a class="glyphicon glyphicon-book books" href="/books"> Books</a>
                  </li>
                </div>
                <div class="col-sm-2">
                  <li>
                    <a class="glyphicon glyphicon-edit sign_up" rel="nofollow" data-method="delete" href="/users/sign_out"> logout</a>
                  </li>
                </div>
              </ul>
                

            <% else %>

                <ul class="nav navbar navbar-right">
                  <div class="col-sm-2">
                    <li>
                      <a class="glyphicon glyphicon-home home" href="/"> Home</a>
                    </li>
                  </div>
                  <div class="col-sm-2">
                    <li>
                      <a class="glyphicon glyphicon-link about" href="/home/about"> About</a>
                    </li>
                  </div>
                  <div class="col-sm-2">
                    <li>
                      <a class="glyphicon glyphicon-edit sign_up" href="/"> sign up</a>
                    </li>
                  </div>
                  <div class="col-sm-2">
                    <li>
                      <a class="glyphicon glyphicon-log-in sign_in" href="/users/sign_in"> login</a>
                    </li>
                  </div>
                </ul>
              </div>
            <% end %>
          </nav>
        </div>
      </div>
    </header>

    <footer>
        <div class="container">
          <div class="row">
            <div class="col-xs-3 col-xs-offset-9">
              <p>CopyRight Infratop.inc</p>
            </div>
          </div>
        </div>
    </footer>

    <%= yield %>
  </body>
</html>

