									<% end %>
								</td>
								<td>
									<%= link_to book.title, book_path(book.id) %>
								</td>
								<td>
									<%= book.body %>
								</td>
								<td>
									<%= book.favorites.count %> いいね
								</td>
								<td>
									<%= book.post_comments.count %> 件コメント
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

