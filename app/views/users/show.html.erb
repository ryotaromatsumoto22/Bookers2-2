<div class="body">
	<div class="container">
		<div class="flash">
			<% if flash[:notice] %>
				<%= flash[:notice] %>
			<% end %>
		</div>
		
		<div class="row">
			<div class="col-xs-3">

				<%= render 'info', user: @user %>
				<%= render 'books/form', book: @book %>

			</div>


			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opnion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td>
									<%= link_to user_path(@user.id) do %>
