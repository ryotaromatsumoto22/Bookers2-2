<div class="body">
	<div class="container">
		<div class="flash">
			<% if flash[:notice] %>
				<%= flash[:notice] %>
			<% end %>
		</div>

		<div class="row">
			<div class="col-xs-3">

				<%= render 'info', user: @user %>
				<%= render 'books/form', book: @book %>

			</div>

			<div class="col-xs-9">
				<h2>Users</h2>

				<%= render 'index', users: @users %>

			</div>
		</div>
	</div>
</div>