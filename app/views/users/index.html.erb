<div class="body">
	<div class="container">
		<div class="flash">
			<% if flash[:notice] %>
				<%= flash[:notice] %>
			<% end %>
		</div>
		
		<div class="row">

			<%= render '/co', book: @book, user: @user %>


			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= attachment_image_tag user, :profile_image, :fill, 35, 35, format: 'jpeg', fallback: "no_image.jpg", size:'35x35' %></td>
								<td><%= user.name %></td>
								<td>フォロー数：<%= user.follower.count %></td>
								<td>フォロワー数：<%= user.follower.count %></td>
								<td>
									<% unless user == current_user %>
										<% if current_user.following?(user) %>
        									<%= link_to 'フォローを外す', unfollow_path(user.id,redirect_id: 0), method: :POST %>
    									<% else %>
        								<%= link_to 'フォローする', follow_path(user.id,redirect_id: 0), method: :POST %>
    									<% end %>
    								<% end %>
								</td>
								<td><%= link_to "Show", user_path(user.id)%></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>